<body>
    <main>
        <header class="main-header style-2 navbar">
            <div class="col-brand">
                <a href="/" class="brand-wrap">
                    <img src="/assets/imgs/theme/inloop-logo.png" class="logo" alt="Evara Dashboard">
                </a>
            </div>
            <div class="col-nav">
                <ul class="nav">

                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    
                </ul>
            </div>
        </header>
        

        <section class="content-main mt-100 mb-20">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-3">Log in</h4>
                    <center><p id="error-message" class="text-danger mb-2"><%= err %></p></center>
                    <!-- <div  class="error-message"></div> -->

                    <form action="/login" method="post" id="loginForm" onsubmit="return validateForm()">
                        <div class="mb-3">
                            <input class="form-control" name="email" id="email" placeholder="Enter your email" type="text" value="<%= data.email %>">
                            <span id="emailMessage" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div class="password-input">
                                <input class="form-control" name="password" id="password" placeholder="Enter your Password" type="password"  value="<%= data.password %>">
                                <span class="password-toggle-button" onclick="togglePasswordVisibility(this)">
                                    <i class="fas fa-eye"></i>
                                </span>
                                <span id="passwordMessage" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- <div class="mb-3">
                            <a href="#" class="float-end font-sm text-muted mb-2">Forgot password?</a>
                        </div> -->
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100" name="login">Login</button>
                        </div>
                    </form>
                </div>
                <p class="text-center mb-4">Don't have an account? <a href="/signup">Sign up</a></p>
            </div>
        </section>
        
       
        
        
        
        <footer class="main-footer text-center">
            <p class="font-xs">
                    2023 Â© InLoop.
