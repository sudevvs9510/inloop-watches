<script>
    async function updateQuantity(productId, userId, stock, current, need) {
        const verify = (need === 'sub') ? true : (parseInt(stock) > parseInt(current))
        if (verify) {
            let res = await fetch('/update-cart-quantity', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId,
                    userId,
                    need
                })

            })
            if (res.status === 200) {
                location.reload()
            }
        } else {
            await Swal.fire({
                title: 'Error',
                text: 'Stock limit exceeded .',
                icon: 'Sorry',
                showConfirmButton: true
            });
            window.location.reload();
        }
    }


